<div class="row event-new">
  <div class="container-fluid">
    <div class="col-md-4 left-top-menu">
        <%= link_to "Home", root_path %>
        <%= link_to "Create Event", new_event_path %>
    </div>
    <div class="col-md-4 text-xs-center" id="logo"> <%= link_to "Eventful", root_path %></div>
    <div class="col-md-4 right-top-menu text-md-right">
      <%= link_to "More Events", events_path %>
      <%= link_to "Logout", destroy_user_session_path, method: 'delete' %>
      <%= image_tag (@user.avatar.url(:thumb)), class: "img-fluid rounded profile-pic" %>
    </div>
</div>
</div>

<div class="row info-bar">
<div class="container">
  <span>To create an event please log in or sign up</span>

</div>
</div>


<div class="row">
  <div class="container">
    <div class="col-md-12 text-xs-center sup-form">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
