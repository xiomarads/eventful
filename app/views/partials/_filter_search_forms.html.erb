<div class="row">
    <div id="form-filter-search">
        <%= form_tag("/events/filter_search", class: "form-inline text-md-center" ,:method => "get") do %>
        <div id="city" class="form-group clearfix">
            <%= label_tag :city, "City", class: "col-md-4 control-label" %>
            <div class="col-md-8">
                <%= select_tag("city", options_for_select(['','Granada', 'LeÃ³n', 'San Juan del Sur', 'Managua'])) %>
            </div>
        </div>

        <div id="category" class="form-group clearfix">
            <%= label_tag :category, "Category", class: "col-md-4 control-label" %>
            <div class="col-md-8">
                <%= select_tag(:category, options_for_select(['', 'Music & Entertainment', 'Sports & Wellness', 'Theater, Film & Arts', 'Food & Drink', 'Community', 'Education', 'Business & Networking', 'Night life'])) %>
            </div>
        </div>

        <div id="event-type" class="form-group clearfix">
            <%= label_tag :event_type, "Event Type", class: "col-md-4 control-label" %>
            <div class="col-md-8">
                <%= select_tag(:event_type, options_for_select(['', 'Festival', 'Concert', 'Fundraiser', 'Fair', 'Expo', 'Party', 'Special Offer'])) %>
            </div>
        </div>

        <div id="cost" class="form-group clearfix">
            <%= label_tag :cost, "Cost", class: "col-md-4 control-label" %>
            <div class="col-md-8">
                <%= select_tag(:cost, options_for_select(['', 'Free', 'Paid', 'By Donation'])) %>
            </div>
        </div>

        <div id="date" class="form-group clearfix">
            <%= label_tag :date, "Date", class: "col-md-4 control-label" %>
            <div class="col-md-8">
                <%= select_tag(:date, options_for_select(['', 'Today'])) %>
            </div>
        </div>
        <div class="form-group clearfix">
            <%= submit_tag "Find Events", :class => "btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>
