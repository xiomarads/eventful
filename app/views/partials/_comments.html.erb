<%= form_for [@event, @a_comment] do |f| %>

<!-- <div class="container"> -->
<div class="form-group row comment-area">
    <h5>Share a comment</h5>
    <%= f.label :email, class: "col-sm-2 form-label" %>
    <div class="col-sm-6">
        <%= f.text_field :email, class: "form-control" %>
    </div>
</div>
<div class="form-group">
    <%= f.label :feedback, class: " col-sm-2 form-label"  %>
    <div class="col-sm-6">
        <%= f.text_area :feedback, class: "form-control"%>
    </div>
</div>
<div class="form-group">
    <div class="">
        <%= f.button class: "btn btn-primary"%>
    </div>
</div>
<% end  %>
