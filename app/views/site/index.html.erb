<!-- Landing page -->
<div class="row" style="background-color: #000;">


<div class="" id="box-wrapper" >
    <div class="container-fluid">
        <div class="col-md-4 left-top-menu">
            <%= link_to "Home", root_path %>
            <%= link_to "Browse Events", events_path %>
        </div>
        <div class="col-md-4 text-xs-center" id="logo">Eventful</div>
        <div class="col-md-4 right-top-menu text-md-right">
            <%= link_to "Create Event", new_event_path %>

            <% if user_signed_in? %>
            <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
            <% if current_user.avatar.exists? %>
            <%= link_to (image_tag current_user.avatar.url(:thumb), class:"img-fluid rounded profile-pic" ), user_profile_path(current_user.id) %>
            <% end %>

        <% else %>
            <%= link_to "Sign Up", new_user_registration_path %>
            <%= link_to "Log In", new_user_session_path %>
            <% end %>

        </div>
    </div>

    <div class="container live-enjoy text-md-center">
        <h2>Create | Discover | Connect</h2>
        <h5>Find & create events that enrich your community</h5>
    </div>

    <div class="row landing-search-form">
        <%= form_tag("/events/search_results", class: "form-inline text-md-center" ,:method => "get") do %>
        <div class="form-group">
            <%= label_tag :date, "When:" %>
            <%= date_field_tag :date, {}, {class: "form-control"} %>
        </div>

        <div class="form-group">
            <%= label_tag(:city, "Where:") %>
            <%= text_field_tag :city, "", placeholder: "Granada, LeÃ³n", class: "form-control" %>
        </div>
        <%= submit_tag "Find Events", :class => "btn btn-primary" %>
        <% end %>

    </div>


</div>

  <%= render "partials/footer" %>

</div>
